
<% include header%>
<h2 class="alert alert-info">Mon profil</h2>

<div class="container-fluid">
    <a href="/modifier_profile" class="btn btn-outline-warning btn-block mb-3 pt-2 pb-2">Modifier mon profil</a>

    <div class="row">
        <div class="col-2 ">
            <% for (profil of profil){ %>
            <ul class="list-group">
                <li class="list-group-item active font-weight-bold d-flex justify-content-between align-items-center">
                    A propos de moi :
                </li>
                <li class="list-group-item"><p class="font-weight-bold">Nom : </p><%= profil.nom %></li>
                <li class="list-group-item"><p class="font-weight-bold">Prénom : </p><%= profil.prenom %></li>
                <li class="list-group-item"><p class="font-weight-bold">Pseudonyme : </p><%= profil.pseudo %></li>
                <li class="list-group-item"><p class="font-weight-bold">Age : </p><%= profil.date_naissance %></li>
                <li class="list-group-item"><p class="font-weight-bold">Habite à: </p><%= profil.ville %></li>
                <li class="list-group-item"><p class="font-weight-bold">Situation : </p><%= profil.situation %></li>
                <li class="list-group-item"><p class="font-weight-bold">Telephone : </p><%= profil.telephone %></li>
                <li class="list-group-item"><p class="font-weight-bold">Diplome : </p><%= profil.diplome %></li>
                <li class="list-group-item"><p class="font-weight-bold">Mail : </p><%= profil.mail %></li>
                <li class="list-group-item"><p class="font-weight-bold">Blog : </p><a href="<%= profil.blog %>"><%= profil.blog %></a></li>
                <li class="list-group-item"><p class="font-weight-bold">Description : </p><%= profil.a_propos %></li>
            </ul>
            <% } %>
        </div>
        <div class="col-2">
            <li class="list-group-item active font-weight-bold d-flex justify-content-between align-items-center">
                Passion:
            </li>
            <% for (passions of passions){ %>
                <li class="list-group-item"><%= passions.name %></li>
            <% } %>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-3">
                    <h2>Mes Photos :</h2>
                </div>
                <div class="col-9">
                    <form ref='uploadForm'
                          id='uploadForm'
                          action='/profil'
                          method='post'
                          encType="multipart/form-data">
                        <div class="input-group mb-1">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupFileAddon01">Enregistrer une nouvelle image</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" name="sampleFile" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                                <label class="custom-file-label" for="inputGroupFile01">Choisir une image ...</label>
                            </div>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Ajouter une description</span>
                            </div>
                            <textarea name="detailFile" class="form-control" aria-label="With textarea"></textarea>
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon04">Ajouter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="bd-example">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <% for(var i=0; i < nbImage; i++) { %>
                                <% if (i == 0) { %>
                                    <li data-target="#carouselExampleCaptions" data-slide-to="<%= i %>" class="active"></li>
                                <% } else {%>
                                    <li data-target="#carouselExampleCaptions" data-slide-to="<%= i %>" ></li>
                                <% } %>
                            <% } %>
                        </ol>
                        <div class="carousel-inner">
                            <% var t =0 %>
                            <% for (images of images){ %>
                                <% if (t == 0) { t = 1%>
                                    <div class="carousel-item active">
                                        <img src="/images/user_image/<%= images.name %>" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <p><%= images.detail %></p>
                                        </div>
                                    </div>
                                <% } else {%>
                                    <div class="carousel-item ">
                                        <img src="/images/user_image/<%= images.name %>" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <p><%= images.detail %></p>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <h2 >Les personnes que j'ai aimé :</h2>
            </div>
            <div class="row">
                <% for (likes of likes){ %>
                    <div class="col mb-md-5">
                        <div class="card" style="width: 18rem;">
                            <a href="/profil/<%= likes.id %>"><img src="/images/user_image/<%= likes.image %>" class="card-img-top"
                                                                     alt="Pas encore d'image"></a>
                            <div class="card-body">
                                <h5 class="card-title"><%= likes.nom %> <%= likes.prenom %></h5>
                                <h6 class="card-subtitle mb-2 text-muted"> Aka <%= likes.pseudo %></h6>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item switch_date"><%= likes.date_naissance %></li>
                                    <li class="list-group-item"><%= likes.ville %></li>
                                </ul>
                                <p class="card-text mt-md-1"><%= likes.a_propos %></p>
                                <div class="text-center">
                                    <a href="/profil/<%= likes.id %>" class="btn btn-primary ">Voir le profil</a>
                                </div>
                            </div>
                        </div>
                    </div>

                <% } %>
            </div>
            <h2 class="active">Les personnes qui m'ont aimé :</h2>
            <div class="row">
                <% for (rlikes of rlikes){ %>
                    <div class="col mb-md-5">
                        <div class="card" style="width: 18rem;">
                            <a href="/profil/<%= rlikes.id %>"><img src="/images/user_image/<%= rlikes.image %>" class="card-img-top"
                                                                   alt="Pas encore d'image"></a>
                            <div class="card-body">
                                <h5 class="card-title"><%= rlikes.nom %> <%= rlikes.prenom %></h5>
                                <h6 class="card-subtitle mb-2 text-muted"> Aka <%= rlikes.pseudo %></h6>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item switch_date"><%= rlikes.date_naissance %></li>
                                    <li class="list-group-item"><%= rlikes.ville %></li>
                                </ul>
                                <p class="card-text mt-md-1"><%= rlikes.a_propos %></p>
                                <div class="text-center">
                                    <a href="/profil/<%= rlikes.id %>" class="btn btn-primary ">Voir le profil</a>
                                </div>
                            </div>
                        </div>
                    </div>

                <% } %>
            </div>
        </div>
    </div>
</div>

<% include footer %>
