<% include header %>
<div class="container">
    <div class="row mt-3">
        <div class="col-3 ">
            <a href="/search/<%=type%>"><button type="button" style="height:600px" class="btn btn-outline-danger btn-lg btn-block">Suivant</button></a>
        </div>
        <% for (profil of profil){ %>
            <div class="card col-6 " >
                <a href="/profil/<%= profil.id %>"><img src="/images/user_image/<%= profil.image %>" class="card-img-top"
                                                        alt="Pas encore d'image"></a>
                <div class="card-body">
                    <h5 class="card-title"><%= profil.nom %> <%= profil.prenom %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"> Aka <%= profil.pseudo %></h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item switch_date"><%= profil.date_naissance %></li>
                        <li class="list-group-item"><%= profil.ville %></li>
                    </ul>
                    <p class="card-text mt-md-1"><%= profil.a_propos %></p>
                    <div class="text-center">
                        <a href="/profil/<%= profil.id %>" class="btn btn-primary ">Voir le profil</a>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <form action="/search/<%=type%>" method="post">
                    <input type="hidden" name="id_like" value="<%=profil.id%>">
                    <button type="submit" style="height:600px" class="btn btn-outline-success btn-lg btn-block">J'aime</button>
                </form>
            </div>
        <% } %>

    </div>
</div>

<% include footer %>